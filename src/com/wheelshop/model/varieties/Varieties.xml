			<if test="required != null"> AND REQUIRED =#{required} </if>
			<if test="creater != null"> AND CREATER =#{creater} </if>
			<if test="adddateFrom != null"> AND unix_timestamp(ADDDATE) &gt;=unix_timestamp(#{adddateFrom}) </if>
